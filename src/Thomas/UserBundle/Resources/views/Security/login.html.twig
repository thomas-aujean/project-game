{% extends "ThomasUserBundle::layout.html.twig" %}


{% block fos_user_content %}

{% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}
    <form action="{{ path("fos_user_security_check") }}" method="post" class="form">
        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
        <div class="login-container">
            <h1>Connexion</h1><br>
            <form>
            
            <div class="form-group">
                <label for="username">Pseudo</label>
                <input class="form-control" type="text" id="username" name="_username" value="{{ last_username }}" required="required" />
            </div>
            <div class="form-group">
                <label for="password">Mot de passe</label>
                <input type="password" id="password" name="_password" required="required" class="form-control"/>
            </div>
                
                <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
                <label for="remember_me">Se souvenir de moi</label><br>
                <input type="submit" class="btn btn-primary" id="_submit" name="_submit" value="Valider" />
            </form>
            <div class="login-help">
                <a href="{{ path('fos_user_resetting_request') }}">Mot de passe oubli√© ?</a>
            </div>
        </div>
    </form>




{% endblock fos_user_content %}
