{% extends "ThomasGameBundle::layout.html.twig" %}
{% block title %}
  La base - {{ parent() }}
{% endblock %}


{% block thomasgame_body %}
<h1>Mon panier</h1>

{% if total == 0 %}
    Votre panier est vide =(
{% else %}
    <table>
      <tr>
        <td>Id</td>
        <td>Nom</div>
        <td>Quantité</div>
        <td>Prix Unitaire</td>
        <td>Sous total</td>
        <td></td>
      </tr>
      {% for key,item in panier %}
 
      <tr>
        <td>{{ item.id }}</td>
        <td>{{ item.name }}</div>
        <td>
          <a href="{{ path('thomas_game_remove_qty', {'id': key}) }}">-</a>         
          {{ item.qty }}
          <a href="{{ path('thomas_game_add_qty', {'id': key}) }}">+</a>
        </div>
        <td>{{ item.unitPrice }} €</td>
        <td>{{ item.price }} €</td>
        <td><a href="{{ path('thomas_game_delete', {'id': key}) }}">Supprimer ligne</a></td>
      </tr>
      {% endfor %}
  </table>  

  total : {{ total }} €
  <div>
    <a href="{{ path('thomas_game_remove') }}">Vider le panier</a>
  </div>
  
  <div>
    {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}


    <a href="{{ path('thomas_game_order') }}">Passer commande</a>
    {% else %}
    Vous devez être enregistré pour passer commande
        <a href="{{ path('fos_user_security_login') }}">Connexion</a>
        <p>Nouveau ?<a href="{{ path('fos_user_registration_register') }}">Rejoignez-nous !</a></p>
    {% endif %}
  </div>

{% endif %}



{% endblock %}

