{% extends "ThomasGameBundle::layout.html.twig" %}
{% block title %}
  La base - {{ parent() }}
{% endblock %}

{% block myfilter %}
{{ include("ThomasGameBundle:Product:form.html.twig") }}
{% endblock %}

{% block thomasgame_body %}
<h3 class="monh3">Les jeux</h3>

  <div class="row">
  {% for product in listGames %}


    <div class="col-xs-12 col-sm-6 col-md-4">
      <div class="product-box">
        <a href="{{ path('thomas_game_view', {'id': product.id}) }}">
          <div class="product-image">
            {% if product.productImage is not null %} 
                <img src="{{ asset(product.productImage.webPath) }}" alt="{{ product.productImage.alt }}" style="width:100%;max-height:200px"/>
            {% endif %}
          </div>
          <div class="product-name">
            {{ product.name }}  {{ product.price }} €
          </div>
          </a>
        <div class="product-add">
          
          <a href="{{ path('thomas_game_add', {'id': product.id}) }}" class="btn btn-success">Ajouter au panier</a>
        </div>
      </div>
    </div>



  {% endfor %}
  
</div>


<ul class="pagination">
  {# On utilise la fonction range(a, b) qui crée un tableau de valeurs entre a et b #}
  {% for p in range(1, nbPages) %}
    <li{% if p == page %} class="active"{% endif %}>
      <a href="{{ path('thomas_game_games', {'page': p}) }}">{{ p }}</a>
    </li>
  {% endfor %}
</ul>

{% endblock %}

