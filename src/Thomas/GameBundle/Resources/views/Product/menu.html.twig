

<div class="row">
  {% for product in listProducts %}
    <div class="col-xs-12 col-sm-6 col-md-4">
      <div class="product-box">
        <a href="{{ path('thomas_game_view', {'id': product.id}) }}">
          <div class="product-image">
            {% if product.productImage is not null %} 
                <img src="{{ asset(product.productImage.webPath) }}" alt="{{ product.productImage.alt }}" style="max-width:100%;max-height:200px"/>
            {% endif %}
          </div>
          <div class="product-name">
            {{ product.name }}  {{ product.price }} â‚¬
          </div>
          </a>
        <div class="product-add">
          
          <a href="{{ path('thomas_game_add', {'id': product.id}) }}" class="btn btn-success">
            <i class="glyphicon glyphicon-plus"></i>
            Ajouter au panier</a>
        </div>
      </div>
    </div>
  {% endfor %}
</div>