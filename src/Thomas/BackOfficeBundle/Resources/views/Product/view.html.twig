{% extends "ThomasBackOfficeBundle::layout.html.twig" %}

{% block title %}
  Back Office - {{ parent() }}
{% endblock %}



{% block thomasbo_body %}

{% for flashMessage in app.session.flashbag.get('notice') %}
    {{ flashMessage }}
{% endfor %}

<h1 class="monh3">{{ product.name }}</h1>


<div class="row">
    <div class="col-md-6">
    {% if product.productImage is not null %}
      <img src="{{ asset(product.productImage.webPath) }}" alt="{{ product.productImage.alt }}" style="width:100%"/>
      {% endif %}
    </div>
    <div class="col-md-6">
      {% if product.system is not null %}
      <div class="row">
        <div class="col-md-6">Console</div>
        <div class="col-md-6">{{ product.system.name }}</div>
      </div>
      {% endif %}
      {% if product.editor is not null %}
      <div class="row">
        <div class="col-md-6">Editeur</div>
        <div class="col-md-6">{{ product.editor.name }}</div>
      </div>
      {% endif %}
      <div class="row">
        <div class="col-md-6">Prix</div>
        <div class="col-md-6">{{ product.price }} €</div>
      </div>
    </div>

  </div>
  <br>
  <p>
    <a href="{{ path('thomas_back_office_product_index', {'page': 1}) }}" class="btn btn-default">
      <i class="glyphicon glyphicon-chevron-left"></i>
      Retour à la liste
    </a>
    <a href="{{ path('thomas_back_office_product_edit', {'id': product.id}) }}" class="btn btn-default">
      <i class="glyphicon glyphicon-edit"></i>
      Modifier le produit
    </a>
    <a href="{{ path('thomas_back_office_product_delete', {'id': product.id}) }}" class="btn btn-danger">
      <i class="glyphicon glyphicon-trash"></i>
      Supprimer le produit
    </a>
  </p>


{% endblock %}