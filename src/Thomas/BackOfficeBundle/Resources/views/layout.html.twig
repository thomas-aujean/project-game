{# src/OC/CoreBundle/Resources/views/layout.html.twig #}

<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>{% block title %}Project Games{% endblock %}</title>

    {% block stylesheets %}
      {# On charge le CSS de bootstrap depuis le site directement #}
      <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css">
      <link rel="stylesheet" href="{{ asset('css/style.css') }}">
      <link rel="stylesheet" href="{{ asset('css/admin.css') }}">
    {% endblock %}
  </head>

  <body>
  <div class="container">
    <div id="header" class="jumbotron">
      <h1>Project Games - Back Office</h1>

    </div>

    <div class="row">

      <div id="menu" class="col-md-3">

{% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
    Connecté en tant que {{ app.user.username }}
    -
    <a href="{{ path('fos_user_security_logout') }}">Déconnexion</a>
{% else %}
    <a href="{{ path('fos_user_security_login') }}">Connexion</a>
{% endif %}

        <h3>Gestion du site</h3>
        <ul class="nav nav-pills nav-stacked">
          {% if is_granted('ROLE_ADMIN') %}
            <li><a href="{{ path('thomas_back_office_product_index') }}">Les produits</a></li>
            <li><a href="{{ path('thomas_back_office_users') }}">Les utilisateurs</a></li>
            <li><a href="{{ path('thomas_back_office_orders') }}">Les commandes</a></li>
            <li><a href="{{ path('thomas_back_office_coupon_index') }}">Les remises</a></li>
            <li><a href="{{ path('thomas_back_office_settings') }}">Les parametres</a></li>
          {% endif %}
          <hr>
          <li><a href="{{ path('thomas_core_home') }}">Retour au site</a></li>
        </ul>
      </div>
      <div id="content" class="col-md-9">
        {% block body %}
          {% block thomasbo_body %}
          {% endblock %}
        {% endblock %}
      </div>
    </div>

    <hr>

    <footer>
      <p>Thomas AUJEAN © {{ 'now'|date('Y') }}</p>
    </footer>
  </div>

  {% block javascripts %}
    {# Ajoutez ces lignes JavaScript si vous comptez vous servir des fonctionnalités du bootstrap Twitter #}
    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"></script>
  {% endblock %}

  </body>
</html>
