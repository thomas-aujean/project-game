{# src/OC/PlatformBundle/Resources/views/Advert/delete.html.twig #}

{% extends "ThomasBackOfficeBundle::layout.html.twig" %}

{% block title %}
  Supprimer un produit - {{ parent() }}
{% endblock %}

{% block thomasbo_body %}

  <h2>Supprimer une remise</h2>

  <p>
    Etes-vous certain de vouloir supprimer la remise "{{ coupon.name }}" de {{ coupon.percent }} % ?
  </p>

  {# On met l'id de l'annonce dans la route de l'action du formulaire #}
  <form action="{{ path('thomas_back_office_coupon_delete', {'id': coupon.id}) }}" method="post">
    <a href="{{ path('thomas_back_office_coupon_view', {'id': coupon.id}) }}" class="btn btn-default">
      <i class="glyphicon glyphicon-chevron-left"></i>
      Retour Ã  la remise
    </a>
    <input type="submit" value="Supprimer" class="btn btn-danger" />
    {{ form_rest(form) }}
  </form>

{% endblock %}