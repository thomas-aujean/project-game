{% extends "ThomasBackOfficeBundle::layout.html.twig" %}

{% block title %}
  Back Office- {{ parent() }}
{% endblock %}


{% block thomasbo_body %}

{% for flashMessage in app.session.flashbag.get('info') %}
    {{ flashMessage }}
{% endfor %}


<h1 class="monh3">Liste des utilisateurs</h1>

<table class="table" style="width:100%">
  <tr>
    <th>Id</th>
    <th>Nom</th> 
    <th>Email</th>
    <th>Code Postal</th>
    <th>Adresse</th>
  </tr>
  {% for user in users %}
    <tr>
      <td>{{ user.id }}</td>
      <td><a href="{{ path('thomas_back_office_user_view', {'id': user.id}) }}">
          {{ user.username }}
        </a>
      </td> 

      <td>{{ user.email }}</td>
      <td>{{ user.zipcode }}</td>
      <td>{{ user.address }}</td>

    </tr>
  {% endfor %}
  
</table>


{% endblock %}